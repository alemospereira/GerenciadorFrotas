@model IEnumerable<WebSiteFrotas.ViewModels.VeiculoViewModel>

@{
    ViewBag.Title = "Index";
}

<br /><br />
@using (Html.BeginForm("Index", "Veiculo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        
      <div class="row">          
          <div class="col-10">
              @Html.TextBox("filtro", null, new { @class = "form-control", @placeholder = "Chassi" })
          </div>
          <div class="col-2 text-right">
              <input type="submit" value="Pesquisar" class="btn btn-outline-warning" />
          </div>
      </div>
    <div>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
}

<div class="limiter">
    <div class="wrap-table100">
        <br /><br />
        <button type="button" onclick="location.href='@Url.Action("Create")'" class="btn btn-outline-primary">Novo Veículo</button><br /><br />
        <div class="table100 ver1 m-b-110">

            <div class="table100-head">
                <table>
                    <thead>
                        <tr class="row100 head">
                            <th class="cell100 column1">Chassi</th>
                            <th class="cell100 column2">Tipo</th>
                            <th class="cell100 column3">Passageiros</th>
                            <th class="cell100 column4">Cor</th>
                            <th class="cell100 column5">Ações</th>

                        </tr>
                    </thead>
                </table>
            </div>

            <div class="table100-body js-pscroll ps ps--active-y">
                <table>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="row100 body">
                                <td class="cell100 column1">
                                    @Html.DisplayFor(modelItem => item.Chassi)
                                </td>
                                <td class="cell100 column2">
                                    @Html.DisplayFor(modelItem => item.TipoVeiculo)
                                </td>
                                <td class="cell100 column3">
                                    @Html.DisplayFor(modelItem => item.NumeroPassageiros)
                                </td>
                                <td class="cell100 column4">
                                    @Html.DisplayFor(modelItem => item.Cor)
                                </td>
                                <td class="cell100 column5">
                                    <div class="row">
                                        <button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Editar"><i class="material-icons">edit</i></button>
                                        <button type="button" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="Detalhes"><i class="material-icons">description</i></button>
                                        <button type="button" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" class="btn btn-sm btn-outline-danger" data-toggle="tooltip" title="Excluir"><i class="material-icons">delete</i></button>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; height: 585px; right: 5px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 293px;"></div></div>
            </div>
        </div>
    </div>
</div>
